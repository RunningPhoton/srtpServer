</filter-class>     
</filter>   
  
  <filter-mapping>
  	<filter-name>StrutsPrepareAndExecuteFilter</filter-name>
  	<url-pattern>*.action</url-pattern>
  </filter-mapping>
  
   
<filter-mapping>     
<filter-name>hibernateFilter</filter-name>     
<url-pattern>*.action</url-pattern>     
</filter-mapping>
  
  <filter-mapping>
  	<filter-name>StrutsPrepareAndExecuteFilter</filter-name>
  	<url-pattern>*.jsp</url-pattern>
  </filter-mapping>
  <filter-mapping>
  	<filter-name>StrutsPrepareAndExecuteFilter</filter-name>
  	<url-pattern>*.html</url-pattern>
  </filter-mapping>
  
  <!-- WEB项目中，接入Spring框架 -->
  <!-- 设置上下文参数，指定Spring配置文件位置 -->
  <context-param>
